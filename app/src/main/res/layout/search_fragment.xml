<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradienttwo"
    android:id="@+id/root_main_fragment_search"
    >
    <include layout="@layout/search_background_"></include>

    <EditText
        android:inputType="textMultiLine|textVisiblePassword"
        android:backgroundTint="@android:color/white"
        android:textDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:hint="جستجو کنید..."
        android:fontFamily="@font/lite_shabnam"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="15dp"

        android:padding="15dp"
        android:drawableStart="@drawable/ic_search_black_24dp"
        android:background="@android:color/white"
        android:id="@+id/search_frame"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_below="@id/search_frame"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/recycler_in_searchfragment"
            >

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

</RelativeLayout>
