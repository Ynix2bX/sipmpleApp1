<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/gradienttwo"
    android:id="@+id/login_root"
    >

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/login_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/user"
            />
    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@android:color/white"
        android:layout_marginHorizontal="30dp"
        android:hint="نام خود را وارد کنید"
        android:textColorHint="#ffffff"
        android:fontFamily="@font/lite_shabnam"
        android:textSize="13dp"
        android:textColor="#ffffff"
        android:id="@+id/nameholder_login"
        />
<Button
    android:layout_width="130dp"
    android:layout_height="45dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/nameholder_login"
    android:layout_marginTop="192dp"
    android:textColor="#ffffff"
    android:text="ورود به برنامه"
    android:background="@drawable/button_logintoapp"
    android:id="@+id/button_login"/>



</RelativeLayout>